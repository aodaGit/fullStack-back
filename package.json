{
  "name": "full-stack-back",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "start": "node src/app.ts",
    "build": "cross-env NODE_ENV=production npx tsc -p tsconfig.json",
    "server": "nodemon ./dist/bin/www",
    "lint": "eslint src --ext .ts,.js --fix"
  },
  "private": "true",
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "express-jwt": "^7.7.7",
    "helmet": "^6.0.0",
    "husky": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^12.3.8",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint src --ext .ts,.js --fix"
    ],
    "src/**/*.{js,jsx,tsx,ts,md,json}": [
      "prettier --config .prettierrc --write"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.6",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  }
}
